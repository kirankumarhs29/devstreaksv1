<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Main App Theme for Compose -->
    <style name="Theme.DevStreak" parent="Theme.SplashScreen.IconBackground">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Splash Theme shown on launch -->
    <style name="Theme.DevStreak.Splash" parent="Theme.SplashScreen">
        <item name="android:windowBackground">@drawable/screen</item>
        <item name="postSplashScreenTheme">@style/Theme.DevStreak</item>
    </style>

</resources>
